  when /^6\.0/
    gem 'active-fedora', git: 'https://github.com/jrgriffiniii/active_fedora.git', branch: 'faraday-dependency'
    gem 'activesupport', '~> 6.0'
    # gem 'faraday', '~> 0.11'
    gem 'faraday', '0.9.0'
  end
end
